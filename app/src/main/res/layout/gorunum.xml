<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
   android:layout_marginLeft="10dp"
    android:id="@+id/backs"
    android:background="@drawable/backfortext"
    android:padding="5dp"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="300dp"
        android:id="@+id/flag1"
        android:scaleType="fitXY"
        android:padding="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/backfortext"
        android:src="@color/black"
        android:layout_height="250dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="wrap_content"
        android:text="test1"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/flag1"
        android:id="@+id/name1"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_gravity="start"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="wrap_content"
        android:text="test1"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/name1"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:id="@+id/capital1"
        android:layout_gravity="start"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="wrap_content"
        android:text="test1"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/capital1"
        android:id="@+id/currency1"
        android:layout_gravity="start"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="wrap_content"
        android:text="test1"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/currency1"
        android:id="@+id/region1"
        android:layout_gravity="start"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="wrap_content"
        android:text="test1"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/region1"
        android:textSize="20sp"
        android:id="@+id/language1"
        android:layout_gravity="start"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <ProgressBar
        android:layout_width="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/progressbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="200dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>